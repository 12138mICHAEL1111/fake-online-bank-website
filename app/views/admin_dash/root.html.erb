<div class="container d-flex flex-column align-items-center pt-5">
    <%= render 'components/header' %>
    <h2 class="mt-5 mb-4">Users</h2>
    <% @users.each do |user|%>
        <div class="border shadow w-100 d-flex p-3 mb-2
          bg-white rounded d-flex justify-content-between" type="button" style="height: 50px;"
           onclick="window.location.href='dash/account/<%= user.id %>'">
          <p style="font-size:1rem;"><strong>Name: </strong><%=user.email%></p>
          <p style="font-size:1rem;"><strong>Number of accounts: </strong><%= user.accounts.length %></p>
        </div>
    <% end %>
    <div>
    <%= button_to 'Create User', 'admin_dash/create/user', :class => "btn btn-primary mt-4" %>
    </div>


</div>
