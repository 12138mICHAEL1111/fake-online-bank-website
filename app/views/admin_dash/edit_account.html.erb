<div class="container d-flex flex-column align-items-center py-5">
    <%= render 'components/header' %>

    <!-- Render the user selected -->
    <%= render :partial => 'components/current_user', :locals => {:user => @user} %>

    <h2 class="mt-5 mb-4">Edit Account</h2>
    <div class="border shadow w-100 d-flex flex-column p-3 mb-2 bg-white rounded form_card">
      <%=  form_for(@account, :url => "/admin_dash/edit/account_post/#{@account.id}", :method => 'post') do |f| %>
        <!-- account input fields -->
        <%= render :partial => 'components/account_form_body', :locals => {:f => f, :value_given => "Edit Account"} %>
      <% end %>
    </div>
    <%= button_to "Cancel",  "/admin_dash/user/#{@user.id}", :method => "get", :class => "btn btn-primary mt-4" %>
</div>
