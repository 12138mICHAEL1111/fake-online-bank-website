<div class="container d-flex flex-column align-items-center py-5">
    <%= render 'components/header' %>

    <h2 class="mt-5 mb-4">Edit User</h2>
    <div class="border shadow w-100 d-flex flex-column p-3 mb-2 bg-white rounded form_card">
      <%=  form_for(@user, :url => "/admin_dash/edit/user_post/#{@user.id}", :method => 'post') do |f| %>
        <div>
          <label for="name" class="control-label">Email Address</label>
        </div>
        <%= f.text_field(:email, class: "form-control") %>
        <br/>
        <div>
          <label for="name" class="control-label">Name</label>
        </div>
        <%= f.text_field(:name, class: "form-control") %>
        <div class="d-flex justify-content-center mt-4">
            <input name="commit" type="submit" value="Edit account" class="btn btn-primary" />
        </div>
      <% end %>
      <br>
      <p id="alert" style="color: red"><%= alert %></p>
    </div>

    <%= button_to "Cancel",  "/admin_dash", :method => "get", :class => "btn btn-primary mt-4" %>
</div>
